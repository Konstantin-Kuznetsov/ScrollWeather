        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/background_gradient"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/horizontalRecyclerViewDays"
        app:layout_constraintTop_toTopOf="@+id/guidelineHor45"
        app:layout_constraintLeft_toLeftOf="@+id/horizontalRecyclerViewHours"
        app:layout_constraintRight_toRightOf="@+id/horizontalRecyclerViewHours"/>

    <View
        android:id="@+id/backGradient2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/background_gradient_2"
        android:visibility="visible"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guidelineHor75"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintVertical_bias="1.0"/>


    <View
        android:id="@+id/backGradient3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/background_gradient_3"
        android:visibility="visible"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/backGradient"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/horizontalRecyclerViewDays"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/guidelineHor75"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guidelineHor60">
    </android.support.v7.widget.RecyclerView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/horizontalRecyclerViewHours"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/guidelineHor60"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guidelineHor45"
        app:layout_constraintVertical_bias="1.0"/>

    <TextView
        android:id="@+id/textViewMorning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Утро"
        android:textColor="@color/colorDarkText"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/guidelineVert25"
        app:layout_constraintTop_toTopOf="@+id/guidelineHor75"/>

    <TextView
        android:id="@+id/textViewDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="День"
        android:textColor="@color/colorDarkText"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/guidelineVert25"
        app:layout_constraintRight_toLeftOf="@+id/guidelineVert50"
        app:layout_constraintTop_toTopOf="@+id/guidelineHor75"/>

    <TextView
        android:id="@+id/textViewEvening"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Вечер"
        android:textColor="@color/colorDarkText"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.55"
        app:layout_constraintLeft_toLeftOf="@+id/guidelineVert50"
        app:layout_constraintRight_toLeftOf="@+id/guidelineVert75"
        app:layout_constraintTop_toTopOf="@+id/guidelineHor75"/>

    <TextView
        android:id="@+id/textViewNight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Ночь"
        android:textColor="@color/colorDarkText"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.521"
        app:layout_constraintLeft_toLeftOf="@+id/guidelineVert75"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guidelineHor75"/>

    <TextView
        android:id="@+id/valueTempMorn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="valueTempMorn"
        android:textColor="@color/colorDarkText"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/textViewMorning"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/textViewMorning"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewMorning"/>

    <TextView
        android:id="@+id/valueTempDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="valueTempDay"
        android:textColor="@color/colorDarkText"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/textViewDay"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/textViewDay"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewDay"/>

    <TextView
        android:id="@+id/valueTempEvening"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="valueTempEvening"
        android:textColor="@color/colorDarkText"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/textViewEvening"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/textViewEvening"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewEvening"/>

    <TextView
        android:id="@+id/valueTempNight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="valueTempNight"
        android:textColor="@color/colorDarkText"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/textViewNight"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/textViewNight"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewNight"/>

    <View
        android:id="@+id/vertSeparator1"
        android:layout_width="1dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/separator_gradient_vert"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/valueTempMorn"
        app:layout_constraintRight_toLeftOf="@+id/guidelineVert25"
        app:layout_constraintTop_toTopOf="@+id/textViewMorning"
        />

    <View
        android:id="@+id/vertSeparator2"
        android:layout_width="1dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/separator_gradient_vert"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/valueTempDay"
        app:layout_constraintRight_toLeftOf="@+id/guidelineVert50"
        app:layout_constraintTop_toTopOf="@+id/textViewDay"
        />

    <View
        android:id="@+id/vertSeparator3"
        android:layout_width="1dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/separator_gradient_vert"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/valueTempEvening"
        app:layout_constraintRight_toLeftOf="@+id/guidelineVert75"
        app:layout_constraintTop_toTopOf="@+id/textViewEvening"
        />

    <View
        android:id="@+id/horSeparator1"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/separator_gradient_hor"
        android:visibility="visible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vertSeparator2"/>

    <View
        android:id="@+id/horSeparator2"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/separator_gradient_hor"
        android:visibility="visible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/horizontalRecyclerViewHours"/>



    <ImageView
        android:id="@+id/imagePressureDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:visibility="visible"
        app:layout_constraintLeft_toLeftOf="@+id/guidelineVert25"
        app:layout_constraintRight_toLeftOf="@+id/guidelineVert50"
        app:layout_constraintTop_toBottomOf="@+id/horSeparator1"
        app:srcCompat="@drawable/atmospheric_pressure"/>

    <TextView
        android:id="@+id/valuePressureDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="pressure"
        android:textColor="@color/colorDarkText"
        app:layout_constraintLeft_toRightOf="@+id/imagePressureDay"
        app:layout_constraintTop_toTopOf="@+id/imagePressureDay"/>

    <ImageView
        android:id="@+id/imageHumidityDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/guidelineVert25"
        app:layout_constraintRight_toLeftOf="@+id/guidelineVert50"
        app:layout_constraintTop_toBottomOf="@+id/imagePressureDay"
        app:srcCompat="@drawable/moisture"/>

    <TextView
        android:id="@+id/valueHumidityDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="humidity"
        android:textColor="@color/colorDarkText"
        app:layout_constraintLeft_toRightOf="@+id/imageHumidityDay"
        app:layout_constraintTop_toTopOf="@+id/imageHumidityDay"/>

    <ImageView
        android:id="@+id/imageCloudinessDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/guidelineVert50"
        app:layout_constraintRight_toLeftOf="@+id/guidelineVert75"
        app:layout_constraintTop_toBottomOf="@+id/horSeparator1"
        app:srcCompat="@drawable/cloudiness"/>

    <TextView
        android:id="@+id/valueCloudinessDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:text="cloudiness"
        android:textColor="@color/colorDarkText"
        app:layout_constraintLeft_toRightOf="@+id/imageCloudinessDay"
        app:layout_constraintTop_toTopOf="@+id/imageCloudinessDay"
        android:layout_marginTop="8dp"/>

    <ImageView
        android:id="@+id/imageWindSpeedDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"

        app:layout_constraintLeft_toLeftOf="@+id/guidelineVert50"
        app:layout_constraintRight_toLeftOf="@+id/guidelineVert75"
        app:layout_constraintTop_toBottomOf="@+id/imageCloudinessDay"
        app:srcCompat="@drawable/windsock"/>

    <TextView
        android:id="@+id/valueWindSpeedDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorDarkText"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="windspeed"
        app:layout_constraintLeft_toRightOf="@+id/imageWindSpeedDay"
        app:layout_constraintTop_toTopOf="@+id/imageWindSpeedDay"/>

    <TextView
        android:id="@+id/valueCurrCity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CurrCity"
        android:textColor="@color/colorDarkText"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/guidelineVert50"
        app:layout_constraintTop_toTopOf="@+id/guidelineHor05"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/valueCurrDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CurrDate"
        android:textColor="@color/colorDarkText"
        android:textSize="15sp"
        android:textAlignment="center"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/valueCurrCity"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/valueCurrCity"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/valueCurrCity"/>

    <ImageView
        android:id="@+id/imageCurrWeather"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:adjustViewBounds="false"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/valueCurrTemp"
        app:layout_constraintLeft_toLeftOf="@+id/guidelineVert20"
        app:layout_constraintRight_toLeftOf="@+id/guidelineVert33"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/not_applicable"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"/>

    <TextView
        android:id="@+id/valueCurrTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CurrTemp"
        android:textColor="@color/colorDarkText"
        android:textSize="70sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/guidelineHor45"
        app:layout_constraintTop_toTopOf="@+id/guidelineHor25"
        android:layout_marginTop="8dp"
        app:layout_constraintRight_toLeftOf="@+id/guidelineVert33"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/guidelineVert20"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"/>

    <ImageButton
        android:id="@+id/previousCityButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        android:scaleType="fitXY"
        android:background="@null"
        android:visibility="visible"
        android:contentDescription="@string/previous_city_button_description"
        app:srcCompat="@drawable/arrow_left"
        app:layout_constraintTop_toTopOf="@+id/valueCurrCity"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/valueCurrCity"
        android:layout_marginBottom="8dp"
        app:layout_constraintRight_toLeftOf="@+id/nextCityButton"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintVertical_bias="0.0"/>

    <ImageButton
        android:id="@+id/nextCityButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        android:scaleType="fitXY"
        android:background="@null"
        android:visibility="visible"
        android:contentDescription="@string/next_city_button_description"
        app:srcCompat="@drawable/arrow_right"
        app:layout_constraintTop_toTopOf="@+id/valueCurrCity"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/valueCurrCity"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/backGradient3"/>

    <TextView
        android:id="@+id/textEmtyListWarning"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:textSize="20sp"
        android:textAlignment="center"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/backGradient3"
        app:layout_constraintLeft_toLeftOf="@+id/backGradient3"
        app:layout_constraintRight_toRightOf="@+id/backGradient3"
        app:layout_constraintTop_toTopOf="@+id/backGradient3"/>


